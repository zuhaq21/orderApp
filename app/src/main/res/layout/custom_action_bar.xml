        <com.google.android.material.appbar.MaterialToolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:background="@color/sf_500"
            android:layout_height="?attr/actionBarSize"
            style="@style/Theme.SymplifiedOrderUpdate"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/app_bar_home"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    app:tint="@color/white"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    />

                <ImageView
                    android:id="@+id/app_bar_logo"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingVertical="5dp"
                    android:src="@drawable/sym_white_cloud" />

                <ImageView
                    android:id="@+id/app_bar_settings"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="20dp"
                    android:layout_toEndOf="@id/app_bar_logo"
                    android:layout_toStartOf="@+id/app_bar_logout"
                    android:src="@drawable/ic_settings_white_24dp" />

                <ImageView
                    android:id="@+id/app_bar_logout"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_logout_black_24dp" />


            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>

